{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {"type": "string"},
        "title": {"type": "string"},
        "description": {"type": "string"},
        "status": {
            "type": "string",
            "enum": [
                "open",
                "closed"
            ]
        },
        "platform": {"type": "string"},
        "token": {"type": "string"},
        "token_amount": {"type": "number"},
        "max_claimers": {"type": "number"},
        "auto_distribute": {"type": "boolean"},
        "banners": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "aspect_ratio": {
                        "type": "string"
                    },
                    "image": {"type": "string"},
                    "animation": {"type": "string"}
                }
            }
        },
        "type": {
            "type": "string",
            "enum": [
                "on-chain",
                "off-chain"
            ]
        },
        "distributions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "distribution_date" : {"type": "number"},
                    "eligibility_time_frame": {
                        "type": "object",
                        "properties": {
                            "from": {"type": "number"},
                            "to": {"type": "number"}
                        }
                    }
                },
                "required": ["distribution_date", "eligibility_time_frame"]
            }
        },
        "eligibility_campaigns": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "campaign_id": {"type": "string"},
                    "min_participation_count": {"type": "number"},
                    "min_droplets_earned": {"type": "number"}
                },
                "required": ["campaign_id"]
            }
        },
        "send_transaction_type": {
            "type": "string",
            "enum": [
                "default",
                "send_token_type",
                "send_fungible"
            ]
        },
        "token_scale": {
            "type": "number"
        }
    },
    "required": [
        "id",
        "title",
        "description",
        "platform",
        "token",
        "token_amount",
        "max_claimers",
        "auto_distribute",
        "type",
        "distributions",
        "eligibility_campaigns",
        "send_transaction_type",
        "token_scale"
    ]
}